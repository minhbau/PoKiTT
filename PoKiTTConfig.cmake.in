# PoKiTTConfig.cmake - defines variables to use the expression
#  library in another cmake project.  The following variables are
#  defined:
#
# PoKiTT_FOUND - true (1)
# 
# PoKiTT_INCLUDE_DIR - the include directory for the installed header files
#
# typical usage:
#   find_package( PoKiTT )
#   target_link_libraries( mylib pokitt )
#

@PACKAGE_INIT@
include(CMakeFindDependencyMacro)

set_and_check( PoKiTT_INCLUDE_DIR
     @CMAKE_INSTALL_PREFIX@/include
     @Cantera_INCLUDE_DIR@
     @ExprLib_INCLUDE_DIR@
   )

list( APPEND CMAKE_MODULE_PATH
    @CMAKE_INSTALL_PREFIX@/share   # look for FindCantera.cmake here
 )

find_dependency( ExprLib REQUIRED PATHS @ExprLib_DIR@ )
find_dependency( Cantera REQUIRED PATHS @Cantera_DIR@ )

include( @CMAKE_INSTALL_PREFIX@/lib/pokitt/PoKiTT_Targets.cmake )

set( PoKiTT_FOUND True )